<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#587FFF">

    <TextView
            android:layout_width="392dp"
            android:layout_height="66dp"
            android:text="@string/hello_asemiks"
            android:background="#DEE1EC"
            android:textSize="24sp" android:textStyle="bold"
            android:textColor="#1D4D1F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/textView"
            android:gravity="center"/>
    <Button
            android:text="@string/random_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_button"
            android:onClick="randomMe"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.023"
            android:gravity="center"/>
    <Button
            android:text="@string/toast_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toast_button"
            android:onClick="toastMe"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.063"
            android:gravity="center"/>
    <Button
            android:text="@string/count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countMe"
            android:id="@+id/count_button" app:layout_constraintStart_toEndOf="@+id/toast_button"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/random_button"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintVertical_bias="0.391" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" android:gravity="center"/>

</android.support.constraint.ConstraintLayout>